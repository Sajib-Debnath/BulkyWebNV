@model List<Category>

@{
    ViewData["Title"] = "Index";
}

<partial name="_Notification" />

<div class="d-flex justify-content-between align-items-center py-4">

    <h2 class=""> Category List</h2>
    <a asp-controller="Category" asp-action="Create" class="btn btn-primary"> <i class="bi bi-plus-circle px-2"></i> Create New Category</a>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th> Category Name</th>
            <th> Display Order</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td>@obj.CategoryName</td>
                <td>@obj.DisplayOrder</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-action="Edit" asp-route-id="@obj.CategoryId" class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit </a>
                        <a asp-action="Delete" asp-route-id="@obj.CategoryId" class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
    

</table>

