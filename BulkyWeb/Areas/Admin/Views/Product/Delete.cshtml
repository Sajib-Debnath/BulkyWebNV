@model Product
@{
    ViewData["Title"] = "Delete";
}

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-2 mt-1">
        <h2 class="text-primary">Delete Category</h2>
        <hr />
    </div>



    <div class="p-2">
        <label asp-for="Title"></label>
        <input disabled asp-for="Title" type="text" class="form-control" />
    </div>

    <div class="p-2">
        <label asp-for="Description"></label>
        <input disabled asp-for="Description" type="text" class="form-control" />
    </div>

    <div class="p-2">
        <label asp-for="ISBN"></label>
        <input disabled asp-for="ISBN" type="text" class="form-control" />
    </div>


    <div class="p-2">
        <label asp-for="Author"></label>
        <input disabled asp-for="Author" type="text" class="form-control" />
    </div>

    <div class="p-2">
        <label asp-for="ListPrice"></label>
        <input disabled asp-for="ListPrice" type="text" class="form-control" />
    </div>

    <div class="p-2">
        <label asp-for="Price50"></label>
        <input disabled asp-for="Price50" type="text" class="form-control" />
    </div>

    <div class="p-2">
        <label asp-for="Price100"></label>
        <input disabled asp-for="Price100" type="text" class="form-control" />
    </div>

    <div class="d-flex p-2">
        <button type="submit" class="btn btn-primary form-control w-50">Delete</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary border text-center  w-50">Back to List</a>
    </div>

</form>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial.cshtml" />
    }
}

