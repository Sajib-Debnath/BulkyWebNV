@model Product
@{
    ViewData["Title"] = "Edit";
}

<form method="post">
    <input asp-for="Id" hidden/>
    <div class="border p-2 mt-1">
        <h2 class="text-primary">Edit Product</h2>
        <hr />
    </div>

    <div asp-validation-summary="All"></div>

    <div class="p-2">
        <label asp-for="Title"></label>
        <input asp-for="Title" type="text" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="p-2">
        <label asp-for="Description"></label>
        <input asp-for="Description" type="text" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    
    <div class="p-2">
        <label asp-for="ISBN"></label>
        <input asp-for="ISBN" type="text" class="form-control" />
        <span asp-validation-for="ISBN" class="text-danger"></span>
    </div>


    <div class="p-2">
        <label asp-for="Author"></label>
        <input asp-for="Author" type="text" class="form-control" />
        <span asp-validation-for="Author" class="text-danger"></span>
    </div>

    <div class="p-2">
        <label asp-for="ListPrice"></label>
        <input asp-for="ListPrice" type="text" class="form-control" />
        <span asp-validation-for="ListPrice" class="text-danger"></span>
    </div>

    <div class="p-2">
        <label asp-for="Price50"></label>
        <input asp-for="Price50" type="text" class="form-control" />
        <span asp-validation-for="Price50" class="text-danger"></span>
    </div>

    <div class="p-2">
        <label asp-for="Price100"></label>
        <input asp-for="Price100" type="text" class="form-control" />
        <span asp-validation-for="Price100" class="text-danger"></span>
    </div>

    <div class="d-flex p-2">
        <button type="submit" class="btn btn-primary form-control w-50">Update</button>
        <a asp-controller="Product" asp-action="Index" class="btn btn-secondary border text-center  w-50">Back to List</a>
    </div>

</form>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial.cshtml" />
    }
}

